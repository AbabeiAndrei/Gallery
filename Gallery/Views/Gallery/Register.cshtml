@{
    ViewBag.Title = "Register";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<script src="~/app/controllers/registerController.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" ng-controller="loginController">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="control-label">Nume</label>
                    <input type="text" class="form-control" ng-model="fullName" />
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input type="email" class="form-control" ng-model="email" />
                </div>
                <div class="form-group">
                    <label class="control-label">Parola</label>
                    <input type="password" class="form-control" ng-model="password" />
                </div>
                <div class="form-group">
                    <label class="control-label">Parola din nou</label>
                    <input type="password" class="form-control" ng-model="password2" />
                </div>
                <div style="margin-top: 10px">
                    <button class="btn btn-primary" ng-click="performRegister()">Register</button>
                </div>
                <div class="alert alert-danger" role="alert" ng-show="{{(errorUi || '').trim().length > 0}}" style="margin-top: 40px">
                    {{errorUi}}
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
